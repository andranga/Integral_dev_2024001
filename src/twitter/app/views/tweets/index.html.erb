<p id="notice"><%= notice %></p>

<h1 class="mb-3">Tweets</h1>

<div class="row">
	<div class="col-9">
	
		<% if @tweets.any? %>
		    <% @tweets.each do |tweet| %>
		    	<div class="row card text-bg-light m-3">
			    	<div class="col-12">
			    		<h5 class="card-title pt-2">
			    			<% if tweet.title == nil %>
			    				<%= tweet.content %>
			    			<% else %>
			    				<%= tweet.title %>: <%= tweet.content %>
			    			<% end %>		
			    		</h5>
			    	</div>
	          		<div class="ms-3">
	            		<p class="bs-component">
	              			<%= link_to 'Show', tweet, type: 'button', type: "button", class: 'btn btn-outline-primary btn-sm' %>

	              			<%= link_to 'Edit', edit_tweet_path(tweet), type: 'button', type: "button", class: 'btn btn-outline-secondary btn-sm' %>
		        
		        			<%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, type: 'button', type: "button", class: 'btn btn-link btn-sm' %>	
	            		</p>
	           		</div>
	    		</div>
	    	<% end %>
		<% else %>  
			<h6>No se encontr√≥ el tweet buscado <span><%= params[:query] %></span></h6>  
		<% end %>
    </div>
    <div class="col-3 mt-3">
    	<div class="row col-9">
			<h5 class="mb-3">Buscar Tweets</h5>
			<form class="" method="GET" action=<%= tweets_path %> >
				<input class="form-control" type="text" name="query">
				<input class="btn btn-primary btn-sm mt-2" type="submit">
				<!-- <p>Valor buscado: <%# params[:query] %></p> -->
			</form>
		</div>
		<div>
	    	<h5 class="mt-5 mb-3">New Tweets</h5>
    		<%= render 'form', tweet: @new_tweet %>
    	</div>
    </div>

</div>

<%# link_to 'New Tweet', new_tweet_path %>

